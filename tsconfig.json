{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "incremental": true,
        "inlineSources": true,
        "module": "commonjs",
        "outDir": "build",
        "paths": {
            "!/*": [
                "*"
            ],
            "#/*": [
                "src/*"
            ],
            "#advisors/*": [
                "src/advisors/*"
            ],
            "#brokers/*": [
                "src/brokers/*"
            ],
            "#errors/*": [
                "src/errors/*"
            ],
            "#events/*": [
                "src/events/*"
            ],
            "#orders/*": [
                "src/orders/*"
            ],
            "#periods/*": [
                "src/periods/*"
            ],
            "#quotations/*": [
                "src/quotations/*"
            ],
            "#symbols/*": [
                "src/symbols/*"
            ],
            "#ticks/*": [
                "src/ticks/*"
            ],
            "#utilities/*": [
                "src/utilities/*"
            ]
        },
        "removeComments": true,
        "sourceMap": true,
        "strict": true,
        "target": "es6"
    },
    "exclude": [
        "build",
        "node_modules"
    ]
}
