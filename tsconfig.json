{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "incremental": true,
        "inlineSources": true,
        "module": "commonjs",
        "outDir": "build",
        "paths": {
            "!/*": [
                "*"
            ],
            "#/*": [
                "src/*"
            ],
            "#advisors/*": [
                "src/advisors/*"
            ],
            "#analysis/*": [
                "src/analysis/*"
            ],
            "#assets/*": [
                "src/assets/*"
            ],
            "#broker/*": [
                "src/broker/*"
            ],
            "#browser/*": [
                "src/browser/*"
            ],
            "#currencies/*": [
                "src/currencies/*"
            ],
            "#errors/*": [
                "src/errors/*"
            ],
            "#events/*": [
                "src/events/*"
            ],
            "#forex/*": [
                "src/forex/*"
            ],
            "#position/*": [
                "src/position/*"
            ],
            "#utilities/*": [
                "src/utilities/*"
            ]
        },
        "removeComments": true,
        "sourceMap": true,
        "strict": true,
        "target": "es6"
    },
    "exclude": [
        "build",
        "node_modules"
    ]
}
